<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colourBlue"
    android:padding="50dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <Button
        android:onClick="helpmenowaction"
        android:textStyle="bold"
        android:background="@drawable/helpmenowbtnback"
        android:textColor="@color/colourBlue"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Help me now !"/>

    <ProgressBar
        android:visibility="gone"
       android:layout_marginTop="20dp"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:background="@drawable/ovalbackwhite"
        android:id="@+id/counter"
        android:visibility="invisible"
        android:gravity="center"
        android:textColor="@color/colourBlue"
        android:textStyle="bold"
        android:textSize="50sp"
        android:text="1"
        android:layout_width="80dp"
        android:layout_height="80dp"/>




</LinearLayout>